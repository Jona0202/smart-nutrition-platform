# Environment variables for Smart Nutrition Platform

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nutrition_db
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/nutrition_db

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Application
APP_NAME=Smart Nutrition Platform
APP_VERSION=0.1.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
